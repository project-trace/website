<script type="text/javascript">
function disable(name){	
	var text = "text_"+name;
	var pic = "pic_"+name;
	document.getElementById(text).style.opacity = "0.4";
	document.getElementById(text).style.filter = "alpha(opacity=40)";
	document.getElementById(pic).style.opacity = "0.4";
	document.getElementById(pic).style.filter = "alpha(opacity=40)";
}
</script>
